<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.comein.rtc_sdkdev.MainActivity">

    <Button
        android:id="@+id/btn_ChangeRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_Join"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_ChangeLiveMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_ChangeRole"
        android:layout_alignBottom="@+id/btn_ChangeRole"
        android:layout_toEndOf="@+id/btn_ChangeRole" />

    <Button
        android:id="@+id/btn_SwitchCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_remote"
        android:layout_toEndOf="@+id/btn_ChangeLiveMode" />

    <Button
        android:id="@+id/btn_Join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_StartStopSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn_Join" />

    <Button
        android:id="@+id/btn_HandUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn_StartStopSpeak" />

    <Button
        android:id="@+id/btn_PopMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn_HandUp" />

    <SurfaceView
        android:id="@+id/sv_remote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_ChangeRole"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <SurfaceView
        android:id="@+id/sv_local"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/sv_remote"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

